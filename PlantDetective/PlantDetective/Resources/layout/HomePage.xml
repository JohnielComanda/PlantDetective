<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    >

    <TextView
        android:layout_width="1000px"
        android:layout_height="200px"
        android:background="#EDFFEB"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crowd Sourcing"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dontâ€™t know your plants? Post it here."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginTop="150px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="1000px"
        android:layout_height="140px"
        android:background="#FFFFFF"
        android:layout_marginTop="280px"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:background="@drawable/searchicon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:contentDescription="@searchIcon"
        android:layout_marginTop="320px"
        android:layout_marginLeft="70px"
        />

    <ImageView
        android:background="@drawable/addicon"
        android:layout_height="80px"
        android:layout_width="80px"
        android:contentDescription="@addIcon"
        android:layout_marginTop="320px"
        android:layout_marginLeft="940px"
        />

    <EditText
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Search keyword"
        android:textColor="@android:color/black"
        android:layout_marginTop="290px"
        android:layout_marginLeft="200px"
        />

    <TextView
        android:layout_width="1000px"
        android:layout_height="160px"
        android:background="#FFFFFF"
        android:layout_marginTop="2000px"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:background="@drawable/homeicon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:contentDescription="@searchIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="170px"
        android:id="@+id/homeIcon"
        />

    <ImageView
        android:background="@drawable/cameraicon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@addIcon"
        android:layout_marginTop="2030px"
        android:layout_centerHorizontal="true"
        android:id="@+id/cameraIcon"
        />

    <ImageView
        android:background="@drawable/hearticon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@addIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="840px"
        android:id="@+id/heartIcon"
        />

</RelativeLayout>