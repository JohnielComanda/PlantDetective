<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1800px"
        android:contentDescription="@Picture"
        android:id="@+id/picture"
        />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1820px"
        android:text="IDENTIFY"
        android:textSize="15sp"
        android:background="#427E3B"
        android:textColor="@android:color/black"
        android:id="@+id/identify"
        />

    <TextView
        android:layout_width="1000px"
        android:layout_height="160px"
        android:background="#FFFFFF"
        android:layout_marginTop="2000px"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:background="@drawable/homeicon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:contentDescription="@homeIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="170px"
        android:id="@+id/homeIcon"
        />

    <ImageView
        android:background="@drawable/circleicon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@takePicture"
        android:layout_marginTop="2030px"
        android:layout_centerHorizontal="true"
        android:id="@+id/takePictureIcon"
        />

    <ImageView
        android:background="@drawable/galleryicon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@galleryIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="840px"
        android:id="@+id/galleryIcon"
        />

</RelativeLayout>