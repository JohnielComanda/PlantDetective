<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <TextView
        android:layout_width="1000px"
        android:layout_height="200px"
        android:background="#EDFFEB"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information!"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know your plant."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginTop="150px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informations"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:layout_marginTop="300px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="1000px"
        android:layout_height="160px"
        android:background="#FFFFFF"
        android:layout_marginTop="2000px"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:background="@drawable/homeicon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:contentDescription="@searchIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="170px"
        android:id="@+id/homeIcon"
        />

    <ImageView
        android:background="@drawable/cameraicon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@addIcon"
        android:layout_marginTop="2030px"
        android:layout_centerHorizontal="true"
        android:id="@+id/cameraIcon"
        />

    <ImageView
        android:background="@drawable/hearticon"
        android:layout_height="100px"
        android:layout_width="100px"
        android:contentDescription="@addIcon"
        android:layout_marginTop="2030px"
        android:layout_marginLeft="840px"
        android:id="@+id/heartIcon"
        />

</RelativeLayout>